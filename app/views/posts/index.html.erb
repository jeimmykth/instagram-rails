<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<table>
    <thead>
        <th>Images</th>
        <th>text</th>
        <th>likes</th>
        <th>comments</th>
        <th></th>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><img src="<%= post.image_url %>"></td>
          <td><%= post.text %></td>
          <td><%= post.likes %></td>
          <td><%= post.comments %></td>
          <td><%= link_to "Ver", post %></td>
          <td><%= link_to 'Editar', edit_post_path(post) %></td>
          <td><%= link_to 'Eliminar', post, :method => :delete %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<%= link_to "Inicio", root_path %>
<%= link_to "Nuevo", new_post_path %>